<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="fragmentos.ParticipantesFragment"
    android:background="@color/fondo_normal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/participantes_titulo"
        android:id="@+id/participantes_titulo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margen_arriba_titulo" />

    <fragment
        android:id="@+id/fragmento_lista_participantes"
        class="fragmentos.ListaDeParticipantesFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/margen_arriba_fragmento" />

</LinearLayout>
