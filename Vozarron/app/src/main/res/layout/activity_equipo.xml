<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.uniquindio.proyecto.android.electiva.vozarron.EquipoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="nombre_entrenador"
        android:id="@+id/nombre_entrenador"
        android:layout_above="@+id/fragmento_lista_participantes"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="74dp" />

    <ImageView
        android:id="@+id/imagen"
        android:src="@drawable/perfil"
        android:layout_width="140dp"
        android:layout_height="160dp"
        android:layout_below="@id/nombre_entrenador"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:longClickable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/participantes_titulo"
        android:id="@+id/participantes_titulo"
        android:layout_above="@+id/fragmento_lista_participantes"
        android:layout_centerHorizontal="true" />

    <fragment
        android:id="@+id/fragmento_lista_participantes"
        class="fragmentos.ListaDeParticipantesFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
