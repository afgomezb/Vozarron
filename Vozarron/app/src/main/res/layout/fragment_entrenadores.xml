<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragmentos.EntrenadoresFragment"
    android:background="@color/fondo_normal"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/entrenadores_titulo"
        android:id="@+id/entrenadores_titulo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margen_arriba_titulo" />

    <fragment
        android:id="@+id/fragmento_lista_entrenadores"
        class="fragmentos.ListaDeEntrenadoresFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/margen_fragmento" />

</LinearLayout>
