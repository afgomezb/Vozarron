<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentos.EntrenadoresFragment"
    android:background="@color/fondo_normal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/entrenadores_titulo"
        android:id="@+id/entrenadores_titulo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margen_arriba_titulo" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listaEntrenadores"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
