<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollViewInicio"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fondo_normal"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:stretchColumns="1"
            android:layout_margin="@dimen/margen_tabla">

            <TableRow>
                <ImageButton
                    android:id="@+id/btn_image_internacionalizacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:background="@color/fondo_normal"
                    android:contentDescription="@string/etq_internacionalizacion"
                    android:src="@mipmap/ic_internacionalizacion" />
                <ImageButton
                    android:id="@+id/conexion"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_conexion" />
                <ImageButton
                    android:id="@+id/btn_image_registrar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@color/fondo_normal"
                    android:contentDescription="@string/etq_registrar_participante"
                    android:src="@mipmap/ic_registrar"
                    />
            </TableRow>
        </TableLayout>




        <ImageView
            android:id="@+id/imagen_uq"
            android:layout_width="@dimen/ancho_logo_uq"
            android:layout_height="@dimen/alto_logo_uq"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/uq_opt" />

        <ImageView
            android:id="@+id/imagen"
            android:layout_width="@dimen/ancho_logo_vozarron"
            android:layout_height="@dimen/alto_logo_vozarron"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo_opt" />

        <Button
            android:id="@+id/btn_votar"
            android:layout_width="@dimen/ancho_boton_votar"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/fondo_items"
            android:text="@string/btn_votar"
            android:textColor="@color/white"
            android:textSize="@dimen/tamano_texto_boton_votar" />

    </LinearLayout>
</ScrollView>